#!/usr/bin/env ruby

require "bundler/setup"
require "cookie_cutter"

template_dir = ENV['CC_TEMPLATE_DIR']
if template_dir.nil?
  template_dir = '/Volumes/z/Dropbox/!Templates'
end

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: cookie [options] template_name cookie_name"

  opts.on("-v", "--[no-]verbose", "Run verbosely") do |v|
    options[:verbose] = v
  end
end.parse!

unless ARGV.size != 2
  c = CookieCutter::Oven.new ARGV[0], ARGV[1], template_dir
  c.save
end
