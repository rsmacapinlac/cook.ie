#!/usr/bin/env ruby

require "bundler/setup"
require "cookie_cutter"

template_dir = ENV['CC_TEMPLATE_DIR']
if template_dir.nil?
  template_dir = '/Volumes/z/Dropbox/!Templates'
end

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: cookie [options] template_name name"

  opts.on("-v", "--[no-]verbose", "Run verbosely") do |v|
    options[:verbose] = v
  end
end.parse!

#c = CookieCutter::Oven.new 'journal', '2016-01-08', template_dir
#c.save
